{
    // Ignore unknown at-rules (e.g. @tailwind, @apply) so built-in CSS validator
    // doesn't flag Tailwind directives as warnings.
    "css.lint.unknownAtRules": "ignore",
    "scss.lint.unknownAtRules": "ignore",
    "less.lint.unknownAtRules": "ignore",

    // Let the Tailwind extension handle Tailwind-specific completions and validation.
    // Optionally map filetypes if needed; keep default for now.
    "tailwindCSS.includeLanguages": {
        "css": "css",
        "html": "html",
        "javascript": "javascript"
    }
}
